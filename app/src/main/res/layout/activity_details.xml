<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".DetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Skin"
        app:titleTextColor="@color/black"
        app:menu="@menu/top_bar"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        android:layout_alignParentTop="true"
        />

    <ImageView
        android:id="@+id/skin_img_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topAppBar"
        android:src="@drawable/skin_placeholder"
        android:scaleType="centerInside"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addedBtn"
        style="@style/btn_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/skin_img_placeholder"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Added to cart" />

    <TextView
        android:id="@+id/skin_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/skin_des"
        android:fontFamily="@font/lemon_regular"
        android:layout_below="@id/addedBtn"
        android:textSize="20sp"
        android:layout_margin="8dp"
        />

</RelativeLayout>
</ScrollView>